<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homePage.RoomDetailsActivity">

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Room Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/roomImage"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="-10dp"
                android:contentDescription="Room Image"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/CustomCornerShape" />

            <!-- Room Title -->
            <TextView
                android:id="@+id/roomTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:text="Cupid's Deluxe Room"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Room Location -->
            <TextView
                android:id="@+id/roomLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="16dp"
                android:text="Himensulan Island, Camotes Cebu"
                android:textColor="#7C7C7C"
                android:textSize="14sp" />

            <!-- Room Rating -->
            <TextView
                android:id="@+id/roomRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="16dp"
                android:text="4.9 ★"
                android:textColor="#7C7C7C"
                android:textSize="14sp" />

            <!-- Room Price -->
            <TextView
                android:id="@+id/roomPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:text="₱1,678/night"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Amenities -->
            <TextView
                android:id="@+id/amenitiesHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:text="Amenities"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_wifi"
                    android:drawablePadding="8dp"
                    android:paddingLeft="16dp"
                    android:text="Wi-Fi" />

                <TextView
                    android:id="@+id/airConditioning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:drawableLeft="@drawable/ic_air_conditioning"
                    android:drawablePadding="8dp"
                    android:paddingLeft="16dp"
                    android:text="Air Conditioning" />
            </LinearLayout>

            <!-- About Section -->
            <TextView
                android:id="@+id/aboutHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:text="About"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/roomDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="16dp"
                android:text="Indulge in luxury and comfort in our Deluxe Room, featuring elegant interiors, plush bedding, a spacious seating area, and modern amenities."
                android:textColor="#7C7C7C"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Static Top Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:paddingHorizontal="5dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="Back Button"
            android:padding="10dp"
            android:src="@drawable/ic_arrow_back" />

        <!-- Heart/Favorite Button -->
        <ImageView
            android:id="@+id/heartButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="Favorite Button"
            android:padding="10dp"
            android:src="@drawable/ic_heart_black" />
    </RelativeLayout>

    <!-- Static Bottom Button -->
    <Button
        android:id="@+id/bookButton"
        android:layout_width="336dp"
        android:layout_height="76dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="20dp"
        android:background="@drawable/filter_button_background"
        android:gravity="center"
        android:text="Book"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
