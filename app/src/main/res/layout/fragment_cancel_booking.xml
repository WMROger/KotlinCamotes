<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/circle_background">

    <!-- Drag handle to indicate swiping -->
    <View
        android:layout_width="36dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:background="@drawable/drag_handle_background"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/cancel_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmation"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/cancel_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to cancel your booking? A refund will be processed and may take up to 24 hours."
        android:textSize="16sp"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@color/gray" />

    <Button
        android:id="@+id/cancel_booking_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel booking"
        android:backgroundTint="@color/red"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp" />

</LinearLayout>
