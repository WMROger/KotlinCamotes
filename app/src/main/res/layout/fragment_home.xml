<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navBar.HomeFragment">

    <!-- Header Text -->

    <!-- Subheader Text -->

    <!-- Room Filters -->
    <TextView
        android:id="@+id/headerText"
        android:layout_width="216dp"
        android:layout_height="82dp"
        android:padding="16dp"
        android:text="Where the wave meets your soul"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subheaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:text="Himensulan Island, Camotes Cebu"
        android:textColor="#7C7C7C"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerText" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/filtersLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/subheaderText">

        <!-- Filter Buttons -->
        <Button
            android:id="@+id/deluxeRoomFilter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/filter_button_background"
            android:paddingStart="1dp"
            android:paddingEnd="1dp"
            android:singleLine="true"
            android:text="Deluxe Room"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <Button
            android:id="@+id/barkadaRoomFilter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/filter_button_background"
            android:paddingStart="1dp"
            android:paddingEnd="1dp"
            android:singleLine="true"
            android:text="Barkada Room"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <Button
            android:id="@+id/regularRoomFilter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/filter_button_background"
            android:paddingStart="1dp"
            android:paddingEnd="1dp"
            android:singleLine="true"
            android:text="Regular Room"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/roomsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filtersLayout"
        tools:listitem="@layout/room_card" />

</androidx.constraintlayout.widget.ConstraintLayout>
