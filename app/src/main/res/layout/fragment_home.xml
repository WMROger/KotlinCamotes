<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F5F7"
    tools:context=".userPage.navBar.HomeFragment">

    <!-- Header Text -->
    <TextView
        android:id="@+id/headerText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Where the wave meets your soul"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/notificationButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Notification Button -->
    <ImageView
        android:id="@+id/notificationButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Notification Button"
        android:src="@drawable/ic_notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Subheader Text -->
    <TextView
        android:id="@+id/subheaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_location"
        android:paddingLeft="16dp"
        android:text="Himensulan Island, Camotes Cebu"
        android:textColor="#7C7C7C"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollableFiltersLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerText" />

    <!-- HorizontalScrollView for Filters -->
    <HorizontalScrollView
        android:id="@+id/scrollableFiltersLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/swipeRefreshLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerText">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/filtersLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp">

            <!-- Deluxe Room Button -->
            <TextView
                android:id="@+id/deluxeRoomFilter"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/filter_button_default"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:text="Deluxe Room"
                android:textSize="14sp" />

            <!-- Barkada Room Button -->
            <TextView
                android:id="@+id/barkadaRoomFilter"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/filter_button_default"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:text="Barkada Room"
                android:textSize="14sp" />

            <!-- Regular Room Button -->
            <TextView
                android:id="@+id/regularRoomFilter"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/filter_button_default"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:text="Regular Room"
                android:textSize="14sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </HorizontalScrollView>

    <!-- SwipeRefreshLayout and RecyclerView -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/roomsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            tools:listitem="@layout/room_card" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
