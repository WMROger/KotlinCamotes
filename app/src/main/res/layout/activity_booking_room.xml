<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homePage.BookingRoomActivity">

    <!-- Top AppBar with Back Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#004D40"
        android:padding="16dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="Back Button"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back" />

        <!-- Title -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bookingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking Room"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bookingSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cupid Deluxe Room | 5 pax"
                android:textColor="#B2DFDB"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Main Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Embedded Calendar Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Select Booking Dates"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- CalendarView -->
            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#E8F5E9"
                android:dateTextAppearance="@style/TextAppearance.AppCompat.Body1"
                android:weekDayTextAppearance="@style/TextAppearance.AppCompat.Body1" />

            <!-- Selected Date Range -->
            <TextView
                android:id="@+id/selectedDateRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="No dates selected"
                android:textSize="16sp"
                android:textStyle="italic" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4"> <!-- Total weight for the layout -->
                <!-- Guests Selector -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guests"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <!-- Minus Button -->
                <Button
                    android:id="@+id/minusButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="70dp"
                    android:layout_weight="1"
                    android:backgroundTint="#004D40"
                    android:text="-"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <!-- Guest Count -->
                <TextView
                    android:id="@+id/guestCount"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="18sp" />

                <!-- Plus Button -->
                <Button
                    android:id="@+id/plusButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:backgroundTint="#004D40"
                    android:text="+"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How would you like to pay?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="GCash Icon"
                    android:src="@drawable/ic_home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="GCash"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Price and Book Now Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="â‚±1,678"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bookNowButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#004D40"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:text="Book now"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
