<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/badge_unknown">

        <!-- User details and room info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Profile picture -->
            <ImageView
                android:id="@+id/userProfileImage"
                android:layout_width="38dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_profile"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                android:background="@drawable/circle_background" />

            <!-- User and room details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/reservationDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reservation date: Dec 13-17"
                    android:textSize="11sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/checkIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check-in: 8am"
                    android:textSize="11sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/checkOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check-out: 8pm"
                    android:textSize="11sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>

            <!-- Room and price details -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/roomType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1x Deluxe Room"
                    android:textSize="11sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/paymentStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paid - via GCash"
                    android:textSize="11sp"
                    android:textColor="@android:color/holo_green_dark" />

                <TextView
                    android:id="@+id/totalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚±1,678"
                    android:textSize="13sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/paidButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Paid"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/holo_green_dark" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/holo_red_dark"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
